    "test:deployed": "hardhat run scripts/test-deployed-contract.js --network monad",
    "test:interact": "hardhat run scripts/interact-with-contract.js --network monad",
    "test:health": "hardhat run scripts/health-check.js --network monad",
    "test:all": "npm run test:health && npm run test:deployed && npm run test:interact",
    "node": "hardhat node",
    "prepublishOnly": "yarn test"

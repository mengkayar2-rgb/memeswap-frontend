  "scripts": {
    "lint": "yarn prettier ./test/*.ts --check",
    "lint:fix": "yarn prettier ./test/*.ts --write",
    "clean": "rimraf ./build/ ./cache/ ./artifacts/",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:factory": "hardhat run scripts/deploy-factory.js --network monad",

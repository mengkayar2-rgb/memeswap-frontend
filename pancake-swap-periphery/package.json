    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^2.4.1",
    "ethereumjs-util": "^6.2.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.2",

  "scripts": {
    "lint": "yarn prettier ./test/*.ts --check",
    "lint:fix": "yarn prettier ./test/*.ts --write",
    "clean": "rimraf ./build/ ./cache/ ./artifacts/",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:router": "hardhat run scripts/deploy-router.js --network monad",
    "deploy:weth": "hardhat run scripts/deploy-weth.js --network monad",
    "test:router": "hardhat run scripts/test-router.js --network monad",

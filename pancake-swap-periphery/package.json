    "flatten:contracts": "hardhat run scripts/flatten-contracts.js",
    "flatten:weth": "hardhat flatten contracts/WETH.sol > flattened/WETH-flattened.sol",
    "flatten:router": "hardhat flatten contracts/PancakeRouter.sol > flattened/PancakeRouter-flattened.sol",
    "status:check": "hardhat run scripts/check-contract-status.js --network monad",
    "node": "hardhat node",
    "prepublishOnly": "yarn test"
